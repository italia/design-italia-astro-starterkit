---
import CardWork from "./CardWork.astro";
import CardHorizontal from "./CardHorizontal.astro";
import GoToSection from "./GoToSection.astro";
import Card from "./Card.astro";
import CTA from "./CTA.astro";
import Rating from "./Rating.astro";
import Hero from "./Hero.astro";
import Newsletter from "./Newsletter.astro";
import InfoCard from "./InfoCard.astro";
---

<div>
  <h1 class="visually-hidden" id="main-container">Nome del comune</h1>
  <section id="musei-hero">
    <Hero
      image="/assets/musei-hero.png"
      title="Arte, storia e cultura tutte in unico Museo."
      text="Il museo di arte moderna e contemporanea della città di Roma. Esplora la storia artistica italiana dal 1900 ad oggi."
      items={[
        {
          label: "Palazzo Ludovisi",
          url: "#",
          image: "https://picsum.photos/720/400",
        },
        {
          label: "Giardino Botanico Margherita Hack",
          url: "#",
          image: "https://picsum.photos/720/401",
        },
      ]}
      paths={[
        { label: "Scopri le collezioni", url: "#" },
        { label: "Scopri gli artisti", url: "#" },
      ]}
    />
  </section>
  <section id="musei-info" class="py-5 my-2">
    <h2 class="visually-hidden">Orari</h2>
    <div class="container">
      <h2>Da sapere per la tua visita</h2>
      <div class="row mt-4 gx-5">
        <div class="col-12 col-md-6 col-lg-6 mb-4">
          <InfoCard
            title="Orari"
            icon="it-clock"
            items={[
              {
                label: "Palazzo Ludovisi",
                description: "Aperto oggi dalle 9.00 alle 18.00",
              },
              {
                label: "Giardino Botanico Margherita Hack",
                description: "Aperto oggi dalle 9.00 alle 18.00",
              },
            ]}
            goToText="Scopri di più"
            goToUrl="#"
          />
        </div>
        <div class="col-12 col-md-6 col-lg-6 mb-4">
          <InfoCard
            title="Dove siamo"
            icon="it-map-marker"
            items={[
              {
                label: "Palazzo Ludovisi",
                description: "Via san Vito, 21, 01234, Roma (RM)",
              },
              {
                label: "Giardino Botanico Margherita Hack",
                description: "Via san Vito, 21, 01234, Roma (RM)",
              },
            ]}
            goToText="Scopri di più"
            goToUrl="#"
          />
        </div>
      </div>
    </div>
  </section>
  <section id="musei-main-content" class="py-4 bg-light">
    <h2 class="visually-hidden">In evidenza</h2>
    <div class="container">
      <h2>In evidenza</h2>
      <div class="row mt-4">
        <div class="col-12 mb-4">
          <CardHorizontal
            title="Hayes, il pittore romantico"
            description="L’esposizione racconta con un centinaio di opere il fondamentale ruolo di Torino per l’affermarsi del Liberty, un’arte che nella capitale sabauda diviene il fulcro di una storia che travolge ogni aspetto della vita e della società."
            image="https://picsum.photos/720/400"
            alt="Descrizione immagine"
            slug="slug"
            titleSize="big"
            contentWidth="50"
            reverseContent
            from="2021-01-01"
            to="2021-01-01"
          />
        </div>
        <div class="col-12 mb-4">
          <CardHorizontal
            title="Trasmettere il pensiero di Alighiero Boetti"
            image="https://picsum.photos/720/401"
            alt="Descrizione immagine"
            description="In occasione del trentesimo anniversario della scomparsa di Alighiero Boetti, l’archivio Alighiero Boetti annuncia l'uscita di quattro nuovi progetti, editi da Agata Boetti, che mettono in luce le sfaccettature del pensiero dell'artista."
            slug="slug"
            contentWidth="50"
            reverseContent
          />
        </div>
        <div class="col-12 mb-4">
          <CardHorizontal
            title="Rinascimento Moderno: l'Arte Contemporanea"
            image="https://picsum.photos/720/402"
            alt="Descrizione immagine"
            description="Un viaggio attraverso il Rinascimento moderno, questa mostra esplora l'intersezione tra arte classica e contemporanea, presentando opere che reinterpretano capolavori storici con un tocco moderno e innovativo."
            slug="slug"
            contentWidth="50"
            reverseContent
          />
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <GoToSection href="#asl-how-to" label="Tutte le mostre e gli eventi" />
      </div>
    </div>
  </section>
  <section id="musei-opere" class="bg-light py-4">
    <h2 class="visually-hidden">Immergiti nel museo</h2>
    <div class="container">
      <h2>Immergiti nel museo</h2>
      <div class="row mt-4 gx-5">
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <CardWork
            image="https://picsum.photos/400/400"
            alt="Descrizione immagine"
            title="La persistenza della memoria"
            author="Salvador Dali"
            workDate="2021-01-01"
            ratio="1x1"
          />
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <CardWork
            image="https://picsum.photos/402/400"
            alt="Descrizione immagine"
            title="La persistenza della memoria"
            author="Salvador Dali"
            workDate="2021-01-01"
            ratio="1x1"
          />
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <CardWork
            image="https://picsum.photos/401/400"
            alt="Descrizione immagine"
            title="La persistenza della memoria"
            author="Salvador Dali"
            workDate="2021-01-01"
            ratio="1x1"
          />
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <CardWork
            image="https://picsum.photos/401/402"
            alt="Descrizione immagine"
            title="La persistenza della memoria"
            author="Salvador Dali"
            workDate="2021-01-01"
            ratio="1x1"
          />
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <CardWork
            image="https://picsum.photos/401/401"
            alt="Descrizione immagine"
            title="La persistenza della memoria"
            author="Salvador Dali"
            workDate="2021-01-01"
            ratio="1x1"
          />
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <CardWork
            image="https://picsum.photos/403/400"
            alt="Descrizione immagine"
            title="La persistenza della memoria"
            author="Salvador Dali"
            workDate="2021-01-01"
            ratio="1x1"
          />
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <GoToSection href="#musei-opere" label="Tutte le opere" />
      </div>
    </div>
  </section>
  <section id="musei-news" class="bg-light py-4">
    <h2 class="visually-hidden">Le ultime notizie del Museo</h2>
    <div class="container">
      <h2>Le ultime notizie del Museo</h2>
      <div class="row mt-4">
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <Card
            title="Inaugurazione nuova sala delle Installazioni"
            description="L'inizio del restauro della tela “Il binario” segna un momento cruciale nella conservazione del nostro patrimonio artistico. Questo affresco iconico, intriso di storia e significato, sarà riportato al suo antico splendore grazie all'abilità e alla dedizione dei nostri restauratori esperti."
            image="https://picsum.photos/720/400"
            alt="Descrizione immagine"
            pubDate="2021-01-01"
            slug="slug"
            descriptionFont="font-serif"
          />
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <Card
            title="Nuovo direttore per la sezione Archiettura urbana"
            description="L'inizio del restauro della tela “Il binario” segna un momento cruciale nella conservazione del nostro patrimonio artistico. Questo affresco iconico, intriso di storia e significato, sarà riportato al suo antico splendore grazie all'abilità e alla dedizione dei nostri restauratori esperti."
            image="https://picsum.photos/720/401"
            alt="Descrizione immagine"
